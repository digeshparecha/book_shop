.container.py-5
  .devise-bootstrap-form
    .devise-bootstrap-form-row
      .devise-bootstrap-form-col.col-md-7.col-10.mx-auto.shadow.rounded.p-md-5.p-4
        %h2.text-center Sign up
        = bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), inline_errors: true) do |f|
          .row 
            .col-md-6.col-12 
              = f.text_field :first_name, label_class: "required", placeholder: "First name"
            .col-md-6.col-12 
              = f.text_field :last_name, label_class: "required",  placeholder: "Last name"

          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
          .row 
            .col-md-6.col-12 
              = f.password_field :password, autocomplete: "new-password", help: "(#{@minimum_password_length} characters minimum)"
            .col-md-6.col-12 
              = f.password_field :password_confirmation, autocomplete: "new-password", label_class: "required"    
          .text-end
            = render "devise/shared/links"
          = f.form_group do
            .text-center
              = f.submit "Sign up", class: "btn btn-primary"
