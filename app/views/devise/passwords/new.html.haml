.container.py-5
  .devise-bootstrap-form
    .devise-bootstrap-form-row
      .devise-bootstrap-form-col.col-md-7.col-10.mx-auto.shadow.rounded.p-md-5.p-4
        %h2.text-center Forgot your password?
        = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          %br/
          %p.text-left Please enter your email address and we will send you a link to reset your password.
          = f.email_field :email, autofocus: true, autocomplete: "email", require: true
          .text-end
            = render "devise/shared/links"
          = f.form_group do
            .text-center
              = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block'
