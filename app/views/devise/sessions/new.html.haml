.container.py-5
  .devise-bootstrap-form
    .devise-bootstrap-form-row
      .devise-bootstrap-form-col.col-md-7.col-10.mx-auto.shadow.rounded.p-md-5.p-4
        %h2.text-center Log in
        = bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), inline_errors: true) do |f|
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email'
          = f.password_field :password, autocomplete: "current-password", placeholder: 'Password'
          - if devise_mapping.rememberable?
            = f.form_group do
              = f.check_box :remember_me
          .text-end
            = render "devise/shared/links"
          = f.form_group do
            .text-center
              = f.submit "Log in", class: "btn btn-primary btn-block"
