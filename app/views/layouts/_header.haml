%nav.navbar.sticky-top.navbar-light.bg-light
  .container.py-4.px-3
    .d-flex.align-items-center.w-100
      .flex-grow-1
        = link_to root_path do
          %h2.text-dark
            %i.fas.fa-book.me-2
            Book Shop
      - if current_user.present? && current_user.is_admin
        = link_to "Admin", admin_books_path, class: "btn btn-outline-primary h-100"
      -if current_user.present?
        = link_to "Dashboard", dashboard_path, class: "ms-2 btn btn-outline-primary h-100"
        = link_to "Log Out", destroy_user_session_path, method: :delete, class: "ms-2 btn btn-outline-primary h-100"
      -else
        = link_to "Log In", new_user_session_path, class: "ms-2"

