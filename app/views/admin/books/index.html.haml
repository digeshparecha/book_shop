.d-flex.py-2
  .flex-grow-1
    %h1 Books
  = link_to "Add new book", new_admin_book_path, class: "btn btn-primary btn-block h-100 my-auto"

%table.table.table-striped
  %thead
    %tr
      %th Title
      %th Description
      %th Author name
      %th
      %th

  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.description
        %td= book.author_name
        %td= link_to 'Edit', edit_admin_book_path(book)
        %td= link_to 'Destroy', admin_book_path(book), method: :delete, data: { confirm: 'Are you sure?' }

