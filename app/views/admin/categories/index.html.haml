.d-flex.py-2
  .flex-grow-1
    %h1 Categories
  = link_to "Add new Category", new_admin_category_path, class: "btn btn-primary btn-block h-100 my-auto"

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Slug
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.name
        %td= category.slug
        %td= link_to 'Edit', edit_admin_category_path(category)
        %td= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }

